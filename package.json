{
  "name": "listify-server",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "scripts": {
    "build": "neutrino build --use neutrino-preset-node",
    "check:node": "check-node-version --node \">=8.1.2 <9\"",
    "ci": "npm run lint:js && npm run test",
    "clean": "rm -rf dist",
    "precommit": "lint-staged && npm run lint",
    "eslint-check": "eslint --print-config .eslintrc | eslint-config-prettier-check",
    "format:js": "prettier --single-quote --trailing-comma all --no-semi --print-width 180 --write \"{src,test}/**/*.js\"",
    "postinstall": "npm run check:node",
    "lint": "npm run lint:js",
    "lint:js": "eslint ./src ./test --ext=js",
    "lint:js:without:prettier": "npm run lint:js -- --rule 'prettier/prettier: 0'",
    "lint:watch": "nodemon --watch src --exec \"npm run lint:without:prettier\"",
    "lint:without:prettier": "npm run lint:js:without:prettier",
    "start": "neutrino start --use neutrino-preset-node",
    "deploy:dev": "now --public -e NODE_ENV=development",
    "deploy:prod": "now --public -e NODE_ENV=production",
    "now-build": "npm install && npm run build",
    "now-start": "npm run start:built",
    "start:built": "forever build/index.js",
    "start:debug": "npm run start -- --debug",
    "start:docker": "docker build -t lead-finder-server . && docker run --rm -it lead-finder-server",
    "test": "neutrino test --use neutrino-preset-node neutrino-preset-mocha",
    "test:watch": "nodemon -w src -w test --exec 'npm run test'",
    "test:scrape": "babel-node src/testScrape.js",
    "scrape:all": "babel-node src/scrapeAll.js",
    "update:sources": "babel-node src/updateSources.js"
  },
  "dependencies": {
    "babel-plugin-root-import": "^5.1.0",
    "lodash": "^4.2.1",
    "scraperjs": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2016": "^6.24.1",
    "chai": "^4.0.1",
    "chai-moment": "^0.1.0",
    "check-node-version": "^2.1.0",
    "eslint": "^3.14.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-config-prettier": "^2.1.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-prettier": "^2.0.1",
    "forever": "^0.15.3",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "neutrino": "^5.9.0",
    "neutrino-preset-mocha": "^5.9.0",
    "neutrino-preset-node": "^5.9.1",
    "nodemon": "^1.8.1",
    "prettier": "^1.2.2",
    "sort-package-json": "^1.6.1"
  },
  "engines": {
    "node": ">= 7.9.0"
  },
  "engine-strict": true,
  "lint-staged": {
    "{src,test}/**/*.js": [
      "yarn format:js --",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "neutrino": {
    "options": {
      "mocha": {
        "recursive": true
      }
    }
  }
}
